                                <option value="Бородулиха">Бородулиха</option>
                                <option value="Жармин">Жармин</option>
                                <option value="Кокпекти">Кокпекти</option>
                                <option value="Урджар">Урджар</option>
                                <option value="Курчатов">Курчатов</option>
                                <option value="Абай">Абай</option>
                            </select>
                          <%}%>
                          <%if(login==="semey"){%>
                            <select class="form-control" id="region" name="region" required>
                                <option value="Семей">Семей</option>
                            </select>
                           <%}%>
                           <%if(login==="kurchatov"){%>
                            <select class="form-control" id="region" name="region" required>
                                <option value="Курчатов">Курчатов</option>
                            </select>
                           <%}%>
                           <%if(login==="abai"){%>
