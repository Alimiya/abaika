<!-- Add modal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/admin/users/create" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel" data-i18n="add__link">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="iin" class="form-label" data-i18n="iin__link">IIN</label>
                        <input type="text" class="form-control" id="iin" name="iin" inputmode="numeric" pattern="^(?=.*[0-9])\d{12}$" required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label" data-i18n="name__link">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="surname" class="form-label" data-i18n="surname__link">Surname</label>
                        <input type="text" class="form-control" id="surname" name="surname" required>
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label" data-i18n="lastname__link">Lastname</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" required>
                    </div>
                    <div class="mb-3">
                        <label for="region" class="form-label" data-i18n="region__link">Region</label>
                        <%if(login==="true"){%>
                        
                            <select class="form-control" id="region" name="region" required>
