<% users.forEach(function(user, i) { %>
    <!-- Delete modal -->
<div class="modal fade" id="deleteModal<%= i %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/admin/users/delete/<%= user._id %>" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel" data-i18n="delete__modal">Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2 data-i18n="delete__user__link"></h2>
                    <p data-i18n="sure__user__link">Are you sure you want to delete this user?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-i18n="clouse__link">Close</button>
                    <button type="submit" class="btn btn-primary" data-i18n="delete__modal">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% }); %>
