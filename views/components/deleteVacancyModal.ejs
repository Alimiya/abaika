<% works.forEach(function(work, i) { %>
    <!-- Delete Work modal -->
    <div class="modal fade" id="deleteWorkModal<%= i %>" tabindex="-1" aria-labelledby="deleteWorkModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/admin/works/delete/<%= work._id %>" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteWorkModalLabel" data-i18n="delete__modal">Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 data-i18n="delete__vacancy__link">Delete Vacancy</h2>
                        <p data-i18n="sure__vacancy__link">Are you sure you want to delete this vacancy?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-i18n="clouse__link">Close</button>
                        <button type="submit" class="btn btn-primary" data-i18n="delete__modal">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }); %>
